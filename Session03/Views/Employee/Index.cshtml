@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<div>
    <a asp-action="Create" class="btn btn-success">Add New Employee</a>
</div>
<br />
<br />

@if(Model.Count >0)
{
    <table class=" table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var emp in Model)
            {
                <tr>
                    <td>@emp.Code</td>
                    <td>@emp.Name</td>
                    <td>@emp.Address</td>
                    <td>@emp.Salary</td>
                    <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@emp.Id">Details</a></td>
                    <td><a asp-action="Update" class=" btn btn-success" asp-route-id="@emp.Id">Update</a></td>
                    <td><a asp-action="Delete" class=" btn btn-danger" asp-route-id="@emp.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There Are No Employees Yet :(</h4>
    </div>
}
